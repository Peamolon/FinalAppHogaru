<%= render "reports/header" %>

 <div class = "form-container">
    <h2>Log in</h2><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
      <%= f.label :email, :class => "label"  %><br />
      <div class = "control">
         <%= f.email_field :email, autofocus: true, placeholder: 'Email' ,autocomplete: "email", :class => "input is-sucess" %>
      </div>
    </div>
  
    <div class="field">
      <p class = "control has-icons-left"></p>
      <%= f.label :password, :class => "label" %><br />
      <div class="control">
         <%= f.password_field :password, autocomplete: "current-password", :class => "input" %>
      </div>
     
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, :class => "checkbox" %>
        <%= f.label :remember_me, :class => "checkbox" %>
      </div>
    <% end %>
  
    <div class="field is-grouped">
      <div class = "control">
         <%= f.submit "Log in" , :class => "button is-link"%>
      </div>
    </div>
     <% end %>
    <%= render "devise/shared/links" %>
 
    
 </div>
