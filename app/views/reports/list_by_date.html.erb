<% numero = 1 %>
 <%= render "header" %>
<p id="notice"><%= notice %></p>
<div class = "table-container">
  <p class = "notice"><%= notice %></p>
    <p class = "alert"><%= alert %></p>
  <p class="title is-1" style="color: rgb(183, 137, 243);">All my history at <%=@reports.first.creation_date%></p>
  <table class = "table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Consumed Calories</th>
      <th>Burned Calories</th>
      <th>Diference</th>
      <th>Type</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @reports.each do |report| %>
    
      <tr>
        <td><%= numero %></td>
        <td><%= "#{current_user.name} #{current_user.lastname}" %></td>
        <td><%= report.consumedCalories %></td>
        <td><%= report.burnedCalories %></td>
        <td><%= report.diference %></td>
        <td><%= report.diference_value %></td>
        <td><%= report.creation_date%></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
      </tr>
      <% numero = numero + 1 %>
    <% end %>
  </tbody>
</table>
 <div class = "control">
  <%= will_paginate(@reports,:renderer => WillPaginate::ActionView::LinkRenderer, class: 'justify-content-center') %>
  </div>
      <div class = "control">
          <%= link_to 'Back',reports_path , :class => "button is-link", :id =>"graphic-id"%>
      </div>
   

</div>